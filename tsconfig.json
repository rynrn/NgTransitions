{
  "compilerOptions": {
    "baseUrl": "./src/ng-transitions",
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "dom"
    ],
    "outDir": "./directive",
    "strict": false,
    "noImplicitAny": true,
    "declaration": true,
    "inlineSources": false,
    "inlineSourceMap": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "typeRoots": [
    "./node_modules/@types"
  ],
  "exclude": ["./index.*"]
}
